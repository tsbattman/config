#! /usr/bin/env zsh

setopt extendedglob
setopt null_glob

autoload -U zargs
pth="((*~*jquery*~*codemirror*~*pagedown*~*reveal*)/)"

py="$pth#*.py"
php="$pth#*.php"
html="$pth#*.html"
js="$pth#*.js"
coffee="$pth#*.coffee"
lisp="$pth#*.lisp"
hs="$pth#*.hs"
cpp="$pth#*.cpp"
c="$pth#*.c"
h="$pth#*.h"
vim="$pth#*.vim"

zargs -- ${~py} ${~php} ${~html} ${~js} ${~coffee} ${~lisp} ${~hs} ${~cpp} ${~c} ${~h} ${~vim} -- grep "$@"

