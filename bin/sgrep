#! /usr/bin/env zsh

setopt extendedglob
setopt null_glob

autoload -U zargs
pth="((*~*jquery*~*codemirror*~*pagedown*~*reveal*)/)"

py="$pth#*.py"
php="$pth#*.php"
html="$pth#*.html"
js="$pth#*.js"
lisp="$pth#*.lisp"
hs="$pth#*.hs"
cpp="$pth#*.cpp"
h="$pth#*.h"

zargs -- ${~py} ${~php} ${~html} ${~js} ${~lisp} ${~hs} ${~cpp} ${~h} -- grep "$@"

