#! /bin/sh

function conv() {
  ffmpeg -y -i "$1" -acodec libfaac -ar 48000 -b:a 128k -ac 2 -vcodec libx264 -b:v 1200k -flags +loop+mv4 -cmp 256 \
    -partitions +parti4x4+partp8x8+partb8x8 -subq 7 -trellis 1 -refs 5 -coder 0 -me_range 16 -keyint_min 25 -sc_threshold 40 \
    -i_qfactor 0.71 -bt 1200k -maxrate 1200k -bufsize 1200k -rc_eq 'blurCplx^(1-qComp)' -qcomp 0.6 -qmin 10 -qmax 51 -qdiff 4 \
    -level 30 -aspect 16:9 -r 30 -g 90 -async 2 "$2"
}

BATCH=0
BATCH_DIR='.'
while [[ $# -gt 0 ]]
do
  case "$1" in
    '-b') BATCH=1 ;;
    '-d') shift; BATCH_DIR="$1" ;;
    '-h') help; exit ;;
    *) break ;;
  esac
  shift
done

echo $BATCH
echo $BATCH_DIR

if [[ $BATCH -ne 0 ]]
then
  for fi in "$@";
  do
    conv "$fi" "$BATCH_DIR/$(basename "${fi%.*}.mp4")"
  done
else
  conv "$1" "$2"
fi
