# vim:filetype=msmtp

defaults
aliases /etc/aliases

port 587

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account icloud
auth on
host smtp.mail.me.com
from tsbattman@icloud.com
user tsbattman@icloud.com
passwordeval "gpg2 -q --for-your-eyes-only --no-tty -d ~/.local/icloud.pass.asc"

account default : icloud
