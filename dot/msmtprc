# vim:filetype=msmtp

defaults
# aliases /etc/aliases

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account icloud
auth on
host smtp.mail.me.com
from tsbattman@icloud.com
user tsbattman@icloud.com
passwordeval "gpg2 -q --for-your-eyes-only --no-tty -d ~/.local/icloud.pass.gpg"
port 587

account yahoo
auth on
host smtp.mail.yahoo.com
from tsbattman@yahoo.com
user tsbattman@yahoo.com
passwordeval "gpg2 -q --for-your-eyes-only --no-tty -d ~/.local/yahoo.pwd.gpg"
port 587

account gmail
auth on
host smtp.gmail.com
from tsbattman@gmail.com
user tsbattman@gmail.com
passwordeval "gpg2 -q --for-your-eyes-only --no-tty -d ~/.local/gmail.pwd.gpg"
port 465

account default : icloud
